<nav>
	<div class="blocktabs-h">
		<a class="blocktab-h active" href="#available">Verfügbare Medien</a> 
		<a class="blocktab-h" href="#transfer">Medien Hinzufügen</a> 
	</div>
	<input 
		type="text" 
		class="search" 
		name="search" 
		placeholder="{{t "Filter (i.e ‘image’, ‘video’, …)"}}"
	/>	
</nav>

<div id="available" class="available pane active">
	<div class="items"></div>

	<div class="actions clearfix">
		<div class="left">
			<div class="input">
				<input type="checkbox" value="1" checked id="good-night" class="good-night-switch"/>	
				<label for="good-night">{{t "Backgroundcolor"}}</label>
			</div>
		</div>
		<div class="right">
			<button class="cancel button">{{t "Cancel"}}</button>
			<button class="confirm button hide">{{t "Confirm"}}</button>
		</div>
	</div>
</div>

<div id="transfer" class="transfer pane">
	<div class="queue">
		<div class="drag-message">
			{{t "Drop files here or <strong>click</string>, to open file browser."}}
		</div>
		<div class="dragging-message">
			{{t "Now drop files."}}
		</div>
		<div class="items"></div>
	</div>
	<form url="#" action="POST" class="methods">
		<div class="file-local method hide">
			<input type="file" multiple accept="image/* video/* audio/* application/pdf" style="display: none;">
		</div>
		<div class="file-local-drop method hide">

		</div>
		<div class="url method hide">
			<input 
				type="url" 
				name="url"
				placeholder="http://www.youtube.com/watch?v=39e3KYAmXK4'"
			>
			<button class="confirm button" disabled>{{t "Upload remote media"}}</button>
		</div>
	</form>
	<div class="actions clearfix">
		<div class="right">
			<button class="cancel button">{{t "Cancel"}}</button>
			<button class="start ready progress button">
				<div class="button-text">{{t "Upload"}}</div>
				<div class="progress-bar"></div>
			</button>
		</div>
	</div>
</div>
